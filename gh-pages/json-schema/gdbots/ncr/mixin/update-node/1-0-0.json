{
  "id": "http://schemas.gdbots.io/json-schema/gdbots/ncr/mixin/update-node/1-0-0.json#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "node_ref": {
      "type": "string",
      "pattern": "^[\\w\\/\\.:-]+$",
      "pbj": {
        "type": "identifier",
        "rule": "single"
      }
    },
    "new_node": {
      "type": "object",
      "anyOf": [
        {
          "$ref": "#/definitions/node"
        }
      ],
      "pbj": {
        "type": "message",
        "rule": "single",
        "overridable": true
      }
    },
    "old_node": {
      "type": "object",
      "anyOf": [
        {
          "$ref": "#/definitions/node"
        }
      ],
      "description": "The entire node, as it appeared before it was modified.",
      "pbj": {
        "type": "message",
        "rule": "single",
        "overridable": true
      }
    }
  },
  "required": [
    "node_ref",
    "new_node"
  ],
  "definitions": {
    "node": {
      "type": "object",
      "anyOf": [
        {
          "$ref": "http://schemas.gdbots.io/json-schema/gdbots/ncr/mixin/node/1-0-0.json#"
        }
      ]
    }
  },
  "additionalProperties": true
}