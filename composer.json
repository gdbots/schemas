{
  "name": "gdbots/schemas",
  "homepage": "https://github.com/gdbots/schemas",
  "description": "Schemas for common Gdbots apps and components.",
  "type": "pbj-schema-store",
  "license": "Apache-2.0",
  "require": {
    "php": ">=5.6",
    "gdbots/pbj": "~1.1"
  },
  "require-dev": {
    "composer/composer": "1.0.*@dev",
    "phpunit/phpunit": "~6.0",
    "gdbots/pbjc": "~0.2"
  },
  "autoload": {
    "psr-0": {
      "": "src/php"
    }
  },
  "autoload-dev": {
    "files": ["pbj-schemas.php", "pbj-schema-stores.php"],
    "psr-0": {
      "": "tests/php"
    }
  },
  "scripts": {
    "pbjc": [
      "vendor/bin/pbjc",
      "git add .",
      "@test"
    ],
    "post-package-install": [
      "Gdbots\\Pbjc\\Composer\\ScriptHandler::writePbjSchemaStoresFile"
    ],
    "post-package-uninstall": [
      "Gdbots\\Pbjc\\Composer\\ScriptHandler::writePbjSchemaStoresFile"
    ],
    "post-package-update": [
      "Gdbots\\Pbjc\\Composer\\ScriptHandler::writePbjSchemaStoresFile"
    ],
    "test": "vendor/bin/phpunit"
  }
}
