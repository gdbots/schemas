{
  "name": "gdbots/schemas",
  "homepage": "https://github.com/gdbots/schemas",
  "description": "Schemas for common Gdbots apps and components.",
  "type": "pbj-schema-store",
  "license": "Apache-2.0",
  "require": {
    "php": ">=7.1",
    "gdbots/pbj": "v3.x-dev as 2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^6.4",
    "gdbots/pbjc": "v1.x-dev"
  },
  "autoload": {
    "psr-0": {
      "": "build/php/src"
    }
  },
  "autoload-dev": {
    "files": [
      "build/php/src/pbj-schemas.php",
      "pbj-schema-stores.php"
    ],
    "psr-0": {
      "": "build/php/tests"
    }
  },
  "scripts": {
    "pbjc": [
      "vendor/bin/pbjc",
      "git add .",
      "@test"
    ],
    "post-package-install": [
      "Gdbots\\Pbjc\\Composer\\ScriptHandler::writePbjSchemaStoresFile"
    ],
    "post-package-uninstall": [
      "Gdbots\\Pbjc\\Composer\\ScriptHandler::writePbjSchemaStoresFile"
    ],
    "post-package-update": [
      "Gdbots\\Pbjc\\Composer\\ScriptHandler::writePbjSchemaStoresFile"
    ],
    "test": [
      "vendor/bin/phpunit",
      "npm test"
    ]
  }
}
