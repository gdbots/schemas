<?xml version="1.0" encoding="UTF-8" ?>
<pbj-schema xmlns="http://gdbots.io/pbj/xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://gdbots.io/pbj/xsd http://gdbots.io/pbj/xsd/schema.xsd">

  <schema id="pbj:gdbots:enrichments:mixin:ua-parser:1-0-0" mixin="true">
    <fields>
      <field name="ctx_ua" type="text" overridable="true"/>
      <field name="ctx_ua_parsed" type="message">
        <any-of>
          <curie>gdbots:contexts::user-agent</curie>
        </any-of>
      </field>
    </fields>

    <php-options>
      <namespace>Gdbots\Schemas\Enrichments\Mixin\UaParser</namespace>
    </php-options>
  </schema>
</pbj-schema>
