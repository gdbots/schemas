<?xml version="1.0" encoding="UTF-8" ?>
<pbj-schema xmlns="http://gdbots.io/pbj/xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://gdbots.io/pbj/xsd http://gdbots.io/pbj/xsd/schema.xsd">

  <schema id="pbj:gdbots:enrichments:mixin:time-parting:1-0-0" mixin="true">
    <fields>
      <field name="month_of_year" type="int-enum">
        <default>0</default>
        <enum id="gdbots:common:month"/>
      </field>
      <field name="day_of_month" type="tiny-int" max="31"/>
      <field name="day_of_week" type="int-enum">
        <default>0</default>
        <enum id="gdbots:common:day-of-week"/>
      </field>
      <field name="is_weekend" type="boolean"/>
      <field name="hour_of_day" type="tiny-int" max="23"/>
    </fields>

    <php-options>
      <namespace>Gdbots\Schemas\Enrichments\Mixin\TimeParting</namespace>
    </php-options>
  </schema>
</pbj-schema>
