<?xml version="1.0" encoding="UTF-8" ?>
<pbj-schema xmlns="http://gdbots.io/pbj/xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://gdbots.io/pbj/xsd http://gdbots.io/pbj/xsd/schema.xsd">

  <schema id="pbj:gdbots:contexts::user-agent:1-0-0">
    <fields>
      <field name="br_family" type="string" pattern="^[\w\s\(\)\[\]\{\}\/\.\|:;,-]+$"/>
      <field name="br_major" type="small-int"/>
      <field name="br_minor" type="small-int"/>
      <field name="br_patch" type="small-int"/>

      <field name="os_family" type="string" pattern="^[\w\s\(\)\[\]\{\}\/\.\|:;,-]+$"/>
      <field name="os_major" type="small-int"/>
      <field name="os_minor" type="small-int"/>
      <field name="os_patch" type="small-int"/>
      <field name="os_patch_minor" type="small-int"/>

      <field name="dvce_family" type="string" pattern="^[\w\s\(\)\[\]\{\}\/\.\|:;,-]+$"/>
    </fields>

    <php-options>
      <namespace>Gdbots\Schemas\Contexts</namespace>
      <insertion-points>
        <imports>
          <![CDATA[
use Gdbots\Pbj\MessageRef;
            ]]>
        </imports>
        <methods>
          <![CDATA[
/**
 * @param string $tag
 * @return MessageRef
 */
public function generateMessageRef($tag = null)
{
    return new MessageRef(static::schema()->getCurie(), $this->generateEtag(), $tag);
}

/**
 * @return array
 */
public function getUriTemplateVars()
{
    return ['ua_hash' => $this->generateEtag()];
}
            ]]>
        </methods>
      </insertion-points>
    </php-options>
  </schema>
</pbj-schema>
