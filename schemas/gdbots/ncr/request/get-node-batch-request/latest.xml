<?xml version="1.0" encoding="UTF-8" ?>
<pbj-schema xmlns="http://gdbots.io/pbj/xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://gdbots.io/pbj/xsd http://gdbots.io/pbj/xsd/schema.xsd">

  <schema id="pbj:gdbots:ncr:request:get-node-batch-request:1-0-0">
    <fields>
      <field name="context" type="string" pattern="^[\w\/\.:-]+$" rule="map">
        <description>
          Context is a map of data that helps the NCR decide where to read/write data from.
          A common use case is multi-tenant applications.
        </description>
      </field>
    </fields>
    <mixins>
      <curie-major>gdbots:pbjx:mixin:request:v1</curie-major>
      <curie-major>gdbots:ncr:mixin:get-node-batch-request:v1</curie-major>
    </mixins>

    <php-options>
      <namespace>Gdbots\Schemas\Ncr\Request</namespace>
    </php-options>
  </schema>
</pbj-schema>
