<?xml version="1.0" encoding="UTF-8" ?>
<pbj-schema xmlns="http://gdbots.io/pbj/xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://gdbots.io/pbj/xsd http://gdbots.io/pbj/xsd/schema.xsd">

  <schema id="pbj:gdbots:ncr:mixin:search-nodes-response:1-0-0" mixin="true" extends="gdbots:pbjx:mixin:response:v1">
    <fields>
      <field name="total" type="int">
        <description>The total number of nodes matching the search.</description>
      </field>
      <field name="has_more" type="boolean"/>
      <field name="time_taken" type="medium-int">
        <description>How long in milliseconds it took to run the query.</description>
      </field>
      <field name="max_score" type="float">
        <description>The maximum score of a matching node from the entire search.</description>
      </field>
      <field name="nodes" type="message" rule="list" overridable="true">
        <any-of>
          <curie>gdbots:ncr:mixin:node</curie>
        </any-of>
      </field>
    </fields>

    <php-options>
      <namespace>Gdbots\Schemas\Ncr\Mixin\SearchNodesResponse</namespace>
    </php-options>
  </schema>
</pbj-schema>
