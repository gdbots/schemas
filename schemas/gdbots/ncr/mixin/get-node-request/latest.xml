<?xml version="1.0" encoding="UTF-8" ?>
<pbj-schema xmlns="http://gdbots.io/pbj/xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://gdbots.io/pbj/xsd http://gdbots.io/pbj/xsd/schema.xsd">

  <schema id="pbj:gdbots:ncr:mixin:get-node-request:1-0-0" mixin="true" extends="gdbots:pbjx:mixin:request:v1">
    <fields>
      <field name="node_ref" type="message-ref">
        <description>
          When "node_ref" is supplied it SHOULD be used to perform the request.
          The "node_ref", "_id" and "slug" are analagous to protobuf unions in that
          only one of these should exist and the priority of selection is as
          ordered in this schema.
        </description>
      </field>
      <field name="_id" type="string" pattern="^[\w\/\.:-]+$"/>
      <field name="slug" type="string" format="slug"/>
    </fields>

    <php-options>
      <namespace>Gdbots\Schemas\Ncr\Mixin\GetNodeRequest</namespace>
    </php-options>
  </schema>
</pbj-schema>
