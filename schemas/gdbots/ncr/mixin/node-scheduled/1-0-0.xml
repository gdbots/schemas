<?xml version="1.0" encoding="UTF-8" ?>
<pbj-schema xmlns="http://gdbots.io/pbj/xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://gdbots.io/pbj/xsd http://gdbots.io/pbj/xsd/schema.xsd">

  <schema id="pbj:gdbots:ncr:mixin:node-scheduled:1-0-0" mixin="true" extends="gdbots:pbjx:mixin:event:v1">
    <fields>
      <field name="node_ref" type="identifier" required="true">
        <php-options>
          <classname>Gdbots\Schemas\Ncr\NodeRef</classname>
        </php-options>
      </field>
      <field name="slug" type="string" format="slug"/>
      <field name="publish_at" type="date-time"/>
    </fields>

    <php-options>
      <namespace>Gdbots\Schemas\Ncr\Mixin\NodeScheduled</namespace>
    </php-options>
  </schema>
</pbj-schema>
