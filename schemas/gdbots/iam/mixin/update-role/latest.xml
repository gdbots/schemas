<?xml version="1.0" encoding="UTF-8" ?>
<pbj-schema xmlns="http://gdbots.io/pbj/xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://gdbots.io/pbj/xsd http://gdbots.io/pbj/xsd/schema.xsd">

  <schema id="pbj:gdbots:iam:mixin:update-role:1-0-0" mixin="true" extends="gdbots:ncr:mixin:update-node:v1">
    <fields>
      <field name="new_node" type="message" required="true">
        <any-of>
          <curie>gdbots:iam:mixin:role</curie>
        </any-of>
      </field>
      <field name="old_node" type="message">
        <description>
          The entire node, as it appeared before it was modified.
        </description>
        <any-of>
          <curie>gdbots:iam:mixin:role</curie>
        </any-of>
      </field>
    </fields>

    <php-options>
      <namespace>Gdbots\Schemas\Iam\Mixin\UpdateRole</namespace>
    </php-options>
  </schema>
</pbj-schema>
