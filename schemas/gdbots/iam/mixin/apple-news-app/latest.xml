<?xml version="1.0" encoding="UTF-8" ?>
<pbj-schema xmlns="http://gdbots.io/pbj/xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://gdbots.io/pbj/xsd http://gdbots.io/pbj/xsd/schema.xsd">

  <schema id="pbj:gdbots:iam:mixin:apple-news-app:1-0-0" mixin="true" extends="gdbots:iam:mixin:app:v1">
    <fields>
      <field name="api_key" type="string" pattern="^[a-z0-9]+$" max="512"/>
      <field name="api_secret" type="string" pattern="^[a-z0-9]+$" max="512"/>
      <field name="channel_id" type="string" pattern="^[a-z0-9-]+$"/>
    </fields>
    <php-options>
      <insertion-points>
        <imports/>
        <methods>
          <![CDATA[
/**
 * @return array
 */
public function getUriTemplateVars()
{
    return [
        '_id' => (string)$this->get('_id'),
        'api_key' => (string)$this->get('api_key'),
        'api_secret' => (string)$this->get('api_secret'),
        'channel_id' => (string)$this->get('channel_id'),
    ];
}
          ]]>
        </methods>
      </insertion-points>
    </php-options>

    <js-options>
      <insertion-points>
        <methods>
          <![CDATA[
/**
 * @returns {Object}
 */
getUriTemplateVars() {
  return {
    _id: `${this.get('_id', '')}`,
    api_key: `${this.get('api_key', '')}`,
    api_secret: `${this.get('api_secret', '')}`,
    channel_id: `${this.get('channel_id', '')}`,
  };
}
          ]]>
        </methods>
      </insertion-points>
    </js-options>
  </schema>
</pbj-schema>
