<?xml version="1.0" encoding="UTF-8" ?>
<pbj-schema xmlns="http://gdbots.io/pbj/xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://gdbots.io/pbj/xsd http://gdbots.io/pbj/xsd/schema.xsd">

  <schema id="pbj:gdbots:pbjx:command:check-health:1-0-0">
    <fields>
      <field name="msg" type="string">
        <description>
          A random string that will be validated to match after
          the event "health-checked" is triggered.  (ping-pong)
        </description>
      </field>
    </fields>

    <mixins>
      <curie-major>gdbots:pbjx:mixin:command:v1</curie-major>
    </mixins>
  </schema>
</pbj-schema>
