<?xml version="1.0" encoding="UTF-8" ?>
<pbj-schema xmlns="http://gdbots.io/pbj/xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://gdbots.io/pbj/xsd http://gdbots.io/pbj/xsd/schema.xsd">

  <schema id="pbj:gdbots:pbjx:request:request-failed-response:1-0-0">
    <fields>
      <field name="error_code" type="small-int">
        <default>2</default>
      </field>
      <field name="error_name" type="string" pattern="^[\w\/\.:-]+$"/>
      <field name="error_message" type="text"/>
      <field name="prev_error_message" type="text"/>
      <field name="stack_trace" type="text"/>
    </fields>

    <mixins>
      <curie-major>gdbots:pbjx:mixin:response:v1</curie-major>
    </mixins>
  </schema>
</pbj-schema>
