<?xml version="1.0" encoding="UTF-8" ?>
<pbj-schema xmlns="http://gdbots.io/pbj/xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://gdbots.io/pbj/xsd http://gdbots.io/pbj/xsd/schema.xsd">

  <schema id="pbj:gdbots:common:mixin:labelable:1-0-0" mixin="true">
    <fields>
      <field name="labels" type="string" pattern="^[\w-]+$" rule="set">
        <description>
          A set of strings used for categorization or workflow.
          Similar to slack channels, github or gmail labels.
        </description>
      </field>
    </fields>
  </schema>
</pbj-schema>
