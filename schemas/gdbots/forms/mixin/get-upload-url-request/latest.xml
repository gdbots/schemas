<?xml version="1.0" encoding="UTF-8" ?>
<pbj-schema xmlns="http://gdbots.io/pbj/xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://gdbots.io/pbj/xsd http://gdbots.io/pbj/xsd/schema.xsd">

  <schema id="pbj:gdbots:forms:mixin:get-upload-url-request:1-0-0" mixin="true"
      extends="gdbots:pbjx:mixin:request:v1">
    <fields>
      <field name="form_ref" type="node-ref" required="true"/>
      <field name="field_name" type="string" pattern="^[a-zA-Z_]{1}[\w-]*$" max="127" required="true">
        <description>
          A unique identifier (within the form) for the field.
        </description>
      </field>
      <field name="client_file_name" type="string" required="true"/>
    </fields>
  </schema>
</pbj-schema>
