<?xml version="1.0" encoding="UTF-8" ?>
<pbj-schema xmlns="http://gdbots.io/pbj/xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://gdbots.io/pbj/xsd http://gdbots.io/pbj/xsd/schema.xsd">

  <schema id="pbj:gdbots:forms:field:yes-no-field:1-0-1">
    <fields>
      <field name="yes_label" type="string"/>
      <field name="no_label" type="string"/>
      <field name="is_consent" type="boolean">
        <description>
          If this field relates to acquiring a user's consent,
          e.g. subscribing to a newsletter, then this field can
          be used to ensure that consent is tracked.
        </description>
      </field>
    </fields>

    <mixins>
      <curie-major>gdbots:forms:mixin:field:v1</curie-major>
    </mixins>
  </schema>
</pbj-schema>
