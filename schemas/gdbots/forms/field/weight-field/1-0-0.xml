<?xml version="1.0" encoding="UTF-8" ?>
<pbj-schema xmlns="http://gdbots.io/pbj/xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://gdbots.io/pbj/xsd http://gdbots.io/pbj/xsd/schema.xsd">

  <schema id="pbj:gdbots:forms:field:weight-field:1-0-0">
    <fields>
      <field name="weight_units" type="string" pattern="^(kilograms|pounds)$">
        <default>pounds</default>
      </field>
      <field name="min_weight" type="small-int">
        <description>The person's minimum physical weight recorded in pounds or kilograms.</description>
      </field>
      <field name="max_weight" type="small-int">
        <description>The person's maximum physical weight recorded in pounds or kilograms.</description>
      </field>
    </fields>

    <mixins>
      <curie-major>gdbots:forms:mixin:field:v1</curie-major>
    </mixins>
  </schema>
</pbj-schema>
